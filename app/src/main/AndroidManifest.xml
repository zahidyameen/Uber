<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.uber">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Uber"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        <activity android:name="com.example.uber.Driver.DriverChooseTypeActivity" />
        <activity android:name="com.example.uber.Payment.PaymentActivity" />
        <activity android:name="com.example.uber.Payment.PayoutActivity" />
        <activity android:name="com.example.uber.Payment.AddPaymentActivity" />
        <activity android:name="com.example.uber.Login.DetailsActivity" />
        <activity
            android:name="com.example.uber.Login.AuthenticationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.uber.Customer.CustomerMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.uber.Customer.CustomerSettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.uber.Driver.DriverSettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.uber.History.HistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.uber.History.HistorySingleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.uber.Driver.DriverMapActivity"
            android:screenOrientation="portrait"
             />

        <service android:name="com.example.uber.Utils.onAppKilled" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>